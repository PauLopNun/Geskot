<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for Compose -->
    <style name="Theme.GesKot" parent="android:Theme.Material.NoActionBar">
        <!-- Dark theme colors -->
        <item name="android:colorPrimary">@color/dark_primary</item>
        <item name="android:colorPrimaryDark">@color/dark_primary_variant</item>
        <item name="android:colorAccent">@color/secondary</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/dark_background</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>